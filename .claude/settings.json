{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "echo \"$HARP_HOOK_DATA\" | harp --notify-edit",
            "type": "command"
          }
        ],
        "matcher": "Edit|Write"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "harp --notify-stop",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  }
}